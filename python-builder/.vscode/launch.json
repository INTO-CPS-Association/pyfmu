    "version": "0.2.0",
    "configurations": [
        {
            "name": "py2fmu generate",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/py2fmu.py",
            "console": "integratedTerminal",
            "args": [
                "generate",
                "-p",
                "generated/multiplier",
                "-n",
                "Multiplier"
            ]
        },
        {
            "name": "py2fmu export",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/py2fmu.py",
            "console": "integratedTerminal",
            "args": [
                "export",
                "-p",
                "generated/multiplier",
                "-o",
                "generated/multiplier_export",
                "--overwrite"
            ]
        }
    ]
}